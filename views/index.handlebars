		event.preventDefault();
		var newUser = {
		firstName: $("#firstName").val().trim(),
		lastName: $("#lastName").val().trim(),
		email: $("#email").val().trim()
		};
		console.log(newUser);
		// Send the POST request.
		$.ajax("/api/user", {
		type: "POST",
		data: newUser
		}).then(
		function() {
			console.log("added new user");
			// Reload the page to get the updated list
			location.reload();
		}
		);
	});
});
	
